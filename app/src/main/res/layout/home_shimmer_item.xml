<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="160dp"
    android:layout_height="240dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/shimmer_home_imageView"
        style="@style/shimmer_image"
        android:layout_width="0dp"
        android:background="@color/shimmer_color"
        android:backgroundTint="@color/shimmer_color"
        android:tint="@color/shimmer_color"
        app:layout_constraintBottom_toTopOf="@+id/shimmer_home_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintVertical_weight=".8"
        app:shapeAppearance="@style/corneredImageViewRounded"
        app:strokeColor="@color/cyan"
        app:strokeWidth="2dp"
        tools:srcCompat="@tools:sample/avatars" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/shimmer_home_textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:background="@color/shimmer_color"
        android:padding="2dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_home_imageView"
        app:layout_constraintVertical_weight="0.2"
        app:shapeAppearance="@style/corneredImageViewRounded"
        app:strokeColor="@color/cyan"
        app:strokeWidth="2dp" />

</androidx.constraintlayout.widget.ConstraintLayout>